<odoo>
    <data>
        <template id="fleets_page" name="Fleets - V√©hicules Disponibles">
            <t t-call="website.layout">
                <div class="container py-5">
                    <h2 class="text-center text-primary mb-4">üöó V√©hicules avec Contrats Associ√©s</h2>

                    <form action="/fleets" method="get" class="mb-4">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="start_date" class="form-label">Disponible du :</label>
                                <input type="date" id="start_date" name="start_date" class="form-control"
                                       t-att-value="request.params.get('start_date') or ''"/>
                            </div>
                            <div class="col-md-4">
                                <label for="end_date" class="form-label">Disponible au :</label>
                                <input type="date" id="end_date" name="end_date" class="form-control"
                                       t-att-value="request.params.get('end_date') or ''"/>
                            </div>
                            <div class="col-md-4 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">Rechercher</button>
                            </div>
                        </div>
                    </form>

                    <!-- V√©hicules avec Contrats Associ√©s -->
                    <t t-if="vehicles_with_contract">
                        <h3 class="text-center text-success mb-4">üöó V√©hicules avec Contrat</h3>
                        <div class="row g-4">
                            <t t-foreach="vehicles_with_contract" t-as="car">
