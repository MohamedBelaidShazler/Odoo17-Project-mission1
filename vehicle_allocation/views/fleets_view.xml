                                                    <t t-foreach="car.rental_contract_ids" t-as="contract">
                                                        <li class="mb-2">
                                                            <span class="text-muted">D√©but : </span>
                                                            <t t-esc="contract.start_date.strftime('%d/%m/%y') if contract.start_date else 'Non sp√©cifi√©'"/>
                                                            <span class="text-muted"> | Fin : </span>
                                                            <t t-esc="contract.expiration_date.strftime('%d/%m/%y') if contract.expiration_date else 'Non sp√©cifi√©'"/>
                                                        </li>
                                                    </t>
                                                </ul>
                                            </div>
                                        </t>

                                        <!-- Lien vers les d√©tails du v√©hicule -->
                                        <div class="card-footer bg-white border-0 text-center">
                                           <a t-att-href="'/car_details?car_id=' + str(car.id) + '&amp;start_date=' + (start_date or '') + '&amp;end_date=' + (end_date or '')"
                                              class="btn btn-outline-primary w-100 rounded-pill">
                                                  Voir les d√©tails
                                           </a>
                                       </div>

                                    </div>
                                </div>
                            </t>
                        </div>
                    </t>
                    <t t-else="">
